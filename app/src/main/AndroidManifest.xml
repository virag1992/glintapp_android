            android:name="app.glintcarwash.com.glintworkerapp.VerifyActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.glintcarwash.com.glintworkerapp.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity android:name="app.glintcarwash.com.glintworkerapp.ColorPickerActivity" />
        <activity android:name="app.glintcarwash.com.glintworkerapp.CreditCardActivity" />
        <activity
            android:name="app.glintcarwash.com.glintworkerapp.CardEditActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:label="@string/app_name" />
        <activity
            android:name="app.glintcarwash.com.glintworkerapp.AddCarActivity"
            android:configChanges="keyboard|keyboardHidden"
            android:label="@string/app_name" />
        <activity android:name=".OrderActivity" />
        <activity android:name="app.glintcarwash.com.glintworkerapp.InboxFragment" />
        <activity
            android:name="app.glintcarwash.com.glintworkerapp.ChatBubbleActivity"
            android:label="@string/app_name" />
        <activity
            android:name="app.glintcarwash.com.glintworkerapp.PlaceImageDialoug"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name="app.glintcarwash.com.glintworkerapp.CardListActivity" />
        <activity
            android:name="app.glintcarwash.com.glintworkerapp.BookOrderActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.glintcarwash.com.glintworkerapp.WorkerAvaibilityActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.glintcarwash.com.glintworkerapp.OrderDetailActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="app.glintcarwash.com.glintworkerapp.PendigOrderActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
